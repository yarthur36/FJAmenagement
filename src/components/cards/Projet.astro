---
export interface Props{
    image:string
}

const {image} = Astro.props
const imageUrl = `url(${image})`;
---
<div class="image p-5 sm:p-8 lg:p-10 rounded-3xl border border-box-border bg-box-bg shadow-lg shadow-box-shadow relative overflow-hidden">
        <p class="hide md:text-xl font-semibold text-heading-2 mt-6 mb-4" >Ceci est un text explicatif / descriptif de la photo</p>
        <div class="image-overlay"></div>
</div>

<style define:vars={{ imageUrl }}>

    .hide {
        display: none;
    }

    .image{
        position: relative;
        height: 30vh;
    }

    .image p{
        position: relative;
        z-index: 1;
        opacity: 1;
        transform: rotate(-2deg);
    }

    .image-overlay{
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: var(--imageUrl);
        background-size: cover;
        opacity: 1;
    }

    .image:hover .image-overlay{
        opacity: 0.3;
    }

    .image:hover{
        transform: rotate(2deg);
    }

    .image:hover .hide{
        display: block;  
    }

</style>

