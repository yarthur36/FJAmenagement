---
import Paragraph from '../shared/Paragraph.astro';

export interface Props{
    title:string,
    description:string,
    image:string
}
const { title, description, image } = Astro.props

const imageUrl = `url(${image})`;

---
<div class="imagePP p-5 sm:p-6 lg:p-8 rounded-3xl border border-box-border bg-box-bg shadow-lg shadow-box-shadow relative overflow-hidden">
    <h2 class="hide md:text-xl font-semibold text-heading-2 mt-6 mb-4"> {title} </h2>
    <p class="hide md:text-xl font-semibold text-heading-3 mt-6 mb-4">{description}</p>
    <div class="imagePP-overlay"></div>
</div>

<style define:vars={{ imageUrl }}>

    .hide{
        display: none;
    }

    .imagePP{
        position: relative;
        height: 35vh;
    }

    .imagePP p{
        position: relative;
        font-size: small;
        z-index: 1;
    }

    .imagePP h2{
        position: relative;
        z-index: 1;
    }

    .imagePP-overlay{
        content: "";
        background-image: var(--imageUrl);
        background-size: cover;
        position: absolute;
        top: 0px;
        right: 0px;
        bottom: 0px;
        left: 0px;
        opacity:1;
    }
    
    .imagePP:hover .imagePP-overlay{
        opacity: 0.2;
    }

    .imagePP:hover .hide {
        display: block;
    }

</style>